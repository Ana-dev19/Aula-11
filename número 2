public class DadosUsuario {
    public static void main(String[] args) {
        String nome ;
        int idade, ano_atual, ano_nascimento, peso;
        float imc, altura;
        System.out.println("Digite seu nome:");
        nome =  entrada.nextLine();
        System.out.println ("Digite sua idade:");
        idade = entrada.nextInt();
        ano_nascimento = ano_atual - idade;
        System.out.println ("Para calcular o IMC, digite sua altura:");
        altura = entrada.nextFloat();
        System.out.println("Para calcular o IMC, digite seu peso");
        peso = entrada.nextInt();
        imc = peso/(altura*2);

         /*mostrar Nome, idade , ano de nascimento, imc*/

        System.out.printf ("Seu nome " + nome + "\n");
        System.out.printf("Sua idade " + idade + "\n");
        System.out.printf ("Voce nasceu em " + ano_nascimento + "\n");
        System.out.printf ("Resultado do calculo IMC : " + imc + "\n");
        if (imc < 18.5)
        else
            if ((imc > 18.5) &&(imc <24.9))
                System.out.println ("Voce esta com o peso normal!");
        else
                if ((imc > 25.0)&& (imc <29.9))
                    System.out.println("Voce esta com sobrepesoI!");
        else
                    if ((imc > 30.0) && (imc <34.9))
                    System.out.println("Voce esta com obesidadeII!");
        else
                        if ((imc > 35.0) && (imc <39.9))
                            System.out.println ("Voce esta com obesidade grave III!");
        else
                            if (imc >= 40)
                                System.out.println ("Obesidade grave III,!");



    }
